{
  "include": ["src/**/*", "types/**/*.d.ts", "mock/**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "element-plus/global"]
  }
}
